<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>Update</title>
    <link rel="stylesheet" href="/Assets/bootstrap/css/bootstrap.min.css">
    <script src="/Assets/jquery-3.3.1.min.js"></script>
    <script src="/Assets/bootstrap/js/bootstrap.min.js"></script>
    <script>
    function olddata(){
        $.get("/old/@Model", function(data, status){
            $("#list").prepend(data);
            newdata();
        });
    }
    function newdata(){
        $.get("/new/@Model", function(data, status){
            $("#list").prepend(data);
            newdata();
        });
    }
    $(document).ready(function(){
        olddata();
    });
    function send(){
        $.post("/write/@Model", $("#writetext")[0].value, function(data, status){
            $("#writetext")[0].value = "";
        });
    }
    </script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <h1>Update</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-sm">
          <form action="javascript:send();">
            <input id="writetext" type="text" name="Text"/>
            <input type="submit" value="Send"/>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-sm">
              <div id="list"></div>
        </div>
      </div>
    </div>
  </body>
</html>